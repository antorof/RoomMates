<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roommates.roommates" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Myorange">

        <activity
            android:name="com.roommates.roommates.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.roommates.roommates.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.roommates.roommates.NewTaskActivity"
            android:label="@string/title_activity_new_task"
            android:parentActivityName="com.roommates.roommates.MainActivity"
            android:screenOrientation="portrait"  >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roommate.roommate.MainActivity" />
        </activity>

        <activity
            android:name="com.roommates.roommates.Preferencias"
            android:label="@string/title_activity_preferencias"
            android:screenOrientation="portrait"   >
        </activity>

        <activity
            android:name="com.roommates.roommates.NewProductActivity"
            android:label="@string/title_activity_new_product"
            android:parentActivityName="com.roommates.roommates.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="portrait"   >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roommate.roommate.MainActivity" />
        </activity>

        <activity
            android:name="com.roommates.roommates.NewApartmentActivity"
            android:label="@string/title_activity_new_apartment"
            android:parentActivityName="com.roommates.roommates.MainActivity"
            android:screenOrientation="portrait"  >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roommate.roommate.MainActivity" />
        </activity>

        <activity
            android:name="com.roommates.roommates.NewBillActivity"
            android:label="@string/title_activity_new_bill"
            android:parentActivityName="com.roommates.roommates.MainActivity"
            android:screenOrientation="portrait"  >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roommate.roommate.MainActivity" />
        </activity>

        <activity
            android:name="com.roommates.roommates.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.roommates.roommates.LoginActivity"
            android:screenOrientation="portrait"   >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roommate.roommate.LoginActivity" />
        </activity>

    </application>

</manifest>
