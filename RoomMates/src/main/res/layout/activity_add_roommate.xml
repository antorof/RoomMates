
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewProductActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_opaque"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/editTextCorreoUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addroommate_useremail_hint"
            android:inputType="textEmailAddress">
            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buttonAddProduct"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/addroommate_button_text"
            android:onClick="add_roommate_button_onClick" />

    </LinearLayout>
</LinearLayout>
