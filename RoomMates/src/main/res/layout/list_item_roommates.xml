<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" 
	android:background="@drawable/selector_item_lista"
    android:id="@+id/listItem1">
	
    <ImageView
        android:id="@+id/listIcon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:contentDescription="Icono del roommate"
        android:src="@drawable/ic_roommates_dark" />

    <TextView
        android:id="@+id/tvNombreRoommate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/listIcon"
        android:layout_alignBottom="@id/listIcon"
        android:layout_toRightOf="@id/listIcon"
        android:gravity="center_vertical"
        android:text="Nombre Apellidos"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listIcon"
        android:layout_alignBottom="@+id/listIcon"
        android:layout_alignRight="@+id/listIcon"
        android:layout_alignLeft="@+id/listIcon"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N"
        android:textColor="@android:color/white"
		android:background="#009B95" />

    <TextView
        android:id="@+id/tvPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listIcon"
        android:layout_alignBottom="@+id/listIcon"
        android:layout_alignRight="@+id/listIcon"
        android:layout_alignLeft="@+id/listIcon"
        android:gravity="top|right"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:textColor="@android:color/white"
		android:background="@android:color/transparent" />

</RelativeLayout> 
