<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="horizontal" 
    android:background="@drawable/selector_item_sublista">
 
     <ImageView
        android:id="@+id/listIcon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:layout_marginRight="6dip"
        android:contentDescription="Icono del Item"
        android:src="@drawable/ic_shopping_dark" 
        android:paddingLeft="0dp"/>
     
    <TextView
        android:id="@+id/opcionItem"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="fill_vertical" />
 
</LinearLayout>